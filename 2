#include <iostream>
using namespace std;

class ReverseStack{
public:
    char string_[100];
    int top;

    ReverseStack(){
        top = -1;
    }

    void push(char ch){
        top=top+1;
        string_[top] = ch;
    }
    char pop(){
        return string_[top--];
    }

    string reverse(string str){
        for(int i=0; i<str.length();i++){
        char ch = str[i];
    }

        string reversed = "";
        while (top != -1){
            reversed += pop();
        }
        return reversed;
    }
};

int main(){
    ReverseStack rs;
    string s = "DATASTRUCTURE";
    s = rs.reverse(s);
    cout<<"Reversed string: "<<s<< endl;

    return 0;
}
